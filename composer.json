{
    "name": "thefox/smtpd",
    "description": "SMTP server (library) written in pure PHP.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "smtp",
        "email",
        "mail",
        "server",
        "daemon"
    ],
    "homepage": "https://fox21.at",
    "authors": [
        {
            "name": "Christian Mayer",
            "email": "christian@fox21.at",
            "homepage": "https://fox21.at"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/tck/network.git"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/options-resolver": "^3.3",
        "psr/log": "^1.0",
        "thefox/network": "^1.2",
        "laminas/laminas-mail": "^2.15"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "phpmailer/phpmailer": "^5.2",
        "monolog/monolog": "^1.23",
        "squizlabs/php_codesniffer": "^3.3",
        "phpstan/phpstan": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "TheFox\\Smtp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TheFox\\Test\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x.x-dev"
        }
    }
}
